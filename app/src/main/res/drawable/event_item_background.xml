<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white"/> <!-- Background color of the item -->

    <!-- Border -->
    <stroke
        android:color="@android:color/darker_gray"
        android:width="1dp" />

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Shadow (elevation effect) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>

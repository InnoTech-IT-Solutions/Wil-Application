<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/donationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Banking Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Bank Name -->
        <TextView
            android:id="@+id/bankName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Name: First National Bank"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />




        <!-- Account Number -->
        <TextView
            android:id="@+id/accountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Number: 62843090292"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Branch Code -->
        <TextView
            android:id="@+id/branchCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Branch Code: 223526"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Swift Code -->
        <TextView
            android:id="@+id/swiftCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SWIFT Code: FRINZAJJ"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Additional Information -->
        <TextView
            android:id="@+id/donationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please use your name +surname +HEAL as a reference when making the payment. Thank you for your support!"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            style="@style/CustomButton"
            android:layout_marginBottom="16dp"
            android:text="Go to Home" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    style="@style/MaterialAlertDialog.Material3.Title.Panel.CenterStacked"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="WebViewLayout">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/aboutLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/heallogo"

            android:contentDescription="App Logo"
            android:layout_marginBottom="16dp" />

        <!-- App Name -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heal Foundation"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Version -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp" />

        <!-- About Description -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app is designed to help you manage events, settings, and more. It offers a seamless experience to interact with our platform and explore new opportunities."
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp" />

        <!-- Developer Info Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutDeveloperTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Developer Info -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutDeveloperInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by InnoTech-IT-Solutions. We are committed to providing excellence."
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="24dp" />

        <!-- Contact Info Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutContactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Contact Info -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutContactInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For support, please email us at: healfoundationsa@gmail.com"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="24dp" />

        <!-- Map View for Location -->
        <WebView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Home Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Go to Home"

            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            style="@style/Widget.Material3.Button.ElevatedButton" />
    </LinearLayout>
</ScrollView>
